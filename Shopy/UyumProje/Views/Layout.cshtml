@using UyumProje.Models;
@{
    string x = "0";
    if (Session["rol"] != null)
    {
        x = Session["rol"].ToString();
    }
    
}


<!DOCTYPE html>
<html lang="en">
<head>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/SH/js/min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/SH/css/styles.css" rel="stylesheet" />


    <script type="text/javascript" src="https://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        div.ex1 {
            width: 46%;
            float: left;
            margin: 2%;
        }

        div.ex2 {
            max-width: 100%;
            border: 3px solid #73AD21;
            float: left;
        }
        

        ​

        .ex3 {
            background-color: black;
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 100px;
        }

        .ex4 {
            margin-bottom: 100px;
            position: relative;
        }

        .ex5 {
            background-image: url("https://static.zara.net/photos///contents/mkt/spots/aw23-north-woman-new/subhome-xmedia-31//w/1920/IMAGE-landscape-fill-85a34c31-a432-4feb-8a29-2eda4ed750eb-default_0.jpg?ts=1690984681494");
        }


        .gradient-custom {
            /* fallback for old browsers */
            background: #cd9cf2;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1))
        }
    </style>
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">Shopy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/AnaSayfa/Urunler/">Home</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Ürünler</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @foreach (ÜrünTürü k in ViewBag.ÜrünTürü as List<ÜrünTürü>)
                            {
                                <li><a style="text-transform:capitalize" class="dropdown-item" href="/AnaSayfa/Urunler/@k.ürünTürüID">@k.ürünAdı</a></li>
                            }

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tasarımcı</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                            @foreach (Tasarımcı k in ViewBag.Tasarımcı as List<Tasarımcı>)
                            {

                                <li><a class="dropdown-item" href="/AnaSayfa/Index/@k.tasarımcıID"> @k.KULLANICI.Ad  @k.KULLANICI.Soyad </a></li>


                            }
                        </ul>
                    </li>
                    @if (x == "2" || x == "3") {
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Satıcı/Satıcı/">Düzenleme</a></li>
                    }
                </ul>

                @if (x == "1" || x == "2")
                {
                    <form class="d-flex">
                        <a class="btn btn-outline-dark" href="/Satıcı/order/">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                           
                        </a>
                    </form>
                }
                <form class="d-flex">
                    @if (Session["username"] != null)
                    {
                        <a class=" btn">Welcome, @Session["username"]</a>

                        <a class="button btn btn-outline-dark" id="btnLogout">Logout</a>
                    }
                    else
                    {
                        <a href="/Guvenlik/Login/" class="button btn btn-outline-dark" type="submit" style="margin-left: 5px;">  Login</a>
                    }




                </form>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop in style</h1>
                <p class="lead fw-normal text-white-50 mb-0">With Shopy</p>
            </div>
        </div>
    </header>
    <!-- Page content-->
    <section class="py-5">
        @RenderBody()
    </section>



    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Doğa Güneş Karadağ</p></div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/SH/js/scripts.js"></script>
    <script>
        $("#btnLogout").click(function () {
            $.ajax({
                type: "POST",
                url: "/Guvenlik/Logout",
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    alert("Successfully logged out");
                    window.location.replace("/AnaSayfa/Urunler");
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    </script>

</body>

</html>
